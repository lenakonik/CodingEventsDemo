@{
}

<h1>Delete Events</h1>

<form method="post">
    @foreach (var ev in ViewBag.events)
   {
       <div class="form-group">
       <label>
            <input type="checkbox" name="eventIds" value="@ev.Id" />
            <span>@ev.Name</span>
       </label>
        </div>
    }

    <input type="submit" name="Delete Selected Events" class="btn btn-danger"/>
</form>
